#include<sys/stat.h>
#include<sys/types.h>
#include<fcntl.h>
#include<unistd.h>
#include<stdio.h>
#include<stdlib.h>
#include<string.h>

int main()
{
int n,int1,int2;
char buf[20];     
while((n=read(STDIN_FILENO, buf,20))>0) 
	{
    buf[n]=0;  //0 at the end of the buffer
if(sscanf(buf,"%d%d",&int1,&int2)==2)
 		{
	sprintf(buf,"%d\n",int1+int2);
 	n=strlen(buf);
	if(write(STDOUT_FILENO,buf,n)!=n)
	 printf("write error");
	}
else
	{
          if(write(STDOUT_FILENO,"invalid arg\n",13)!=13)
              printf("write error");
	}
	}
exit(0);
}

Output:-
./a.out
2 3
5
